@using Restoran.Areas.Admin.Data
@{
    ViewData["Title"] = "Index";
}
@model LoginViewModel
<main class="main-content">
    <div class="breadcrumb-area breadcrumb-height"
         data-bg-image="assets/images/breadcrumb/bg/1-1-1919x388.jpg">
        <div class="container h-50">
            <div class="row h-50">
                <div class="col-lg-12">
                    <div class="breadcrumb-item">
                        <h2 class="breadcrumb-heading">Login</h2>
                        <ul>
                            <li>
                                <a asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li>Login</li>
                        </ul>
                    </div>
                </div>
                @if (TempData["ConfirmationMessage"] != null)
                {
                    <div class="col-lg-6">
                        <div class="alert alert-success" role="alert">
                            @TempData["ConfirmationMessage"]
                        </div>
                    </div>

                }
            </div>
        </div>
    </div>
    <div class="login-register-area section-space-y-axis-100">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <form method="post">
                        <div class="login-form">
                            <h4 class="login-title">Login</h4>
                            <div class="row">
                                <div class="col-lg-12">
                                    <label>Username or Email</label>
                                    <input asp-for="UserNameOrEmail" placeholder="Username or Email" />
                                    <span asp-validation-for="UserNameOrEmail" class="text-danger"></span>
                                </div>
                                <div class="col-lg-12">
                                    <label>Password</label>
                                    <input asp-for="Password" placeholder="Password" />
                                    <span asp-validation-for="Password" class="text-danger"></span>

                                </div>
                                <div class="col-md-8">
                                    <div class="check-box">
                                        <input asp-for="RememberMe" id="remember_me" />
                                        <label for="remember_me">Remember me</label>
                                    </div>
                                </div>
                                <div class="col-md-4 pt-1 mt-md-0">
                                    <div class="forgotton-password_info">
                                        <a asp-action="ForgotPassword"> Forgotten password?</a>
                                    </div>
                                </div>
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="col-lg-12 pt-5">
                                    <button class="btn btn-custom-size lg-size btn-pronia-primary">
                                        Login
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>


