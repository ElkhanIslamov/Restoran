@model DishCreateViewModel
<div class="col-8 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Create Dish</h4>
            <form class="forms-sample" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="exampleInputName1">Title</label>
                    <input asp-for="Title" class="form-control" id="exampleInputName1" placeholder="Title">
                </div>
                <span asp-validation-for="Title" class="text-danger"></span>

                <div class="form-group">
                    <label for="exampleInputName1">Price</label>
                    <input asp-for="Price" class="form-control" id="exampleInputName1" placeholder="">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Category</label>
                    <select asp-for="CategoryId" asp-items="Model.CategorySelectListItems" class="form-control" id="exampleInputName1"></select>
                </div>
                <span asp-validation-for="Price" class="text-danger"></span>

                <div class="form-group">
                    <label for="exampleInputName1">Description</label>
                    <input asp-for="Description" class="form-control" id="exampleInputName1" placeholder="Description">
                </div>
                <span asp-validation-for="Description" class="text-danger"></span>

                <div class="form-group">
                    <label>Image</label>
                    <div class="input-group col-xs-12">
                        <input asp-for="ImageFile" class="form-control file-upload-info" placeholder="Upload Image">
                    </div>
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>
                <div asp-validation-summary="ModelOnly"></div>
                <button type="submit" class="btn btn-primary mr-2">Submit</button>
                <a asp-action="index" class="btn btn-light">Cancel</a>
            </form>
        </div>
    </div>
</div>



